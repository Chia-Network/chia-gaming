{
    "compilerOptions": {
      "strict": false,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "outDir": "build/types",
      "module": "esnext",
      "checkJs": false,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
      "target": "es2020"
    },
    "include": ["src/lib"],
    "exclude": ["src/lib/**/tests"]
}
