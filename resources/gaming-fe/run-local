#1/bin/bash -x

kill $(ports | grep 3000 | awk '{print $2}')
kill $(ports | grep 3001 | awk '{print $2}')

npm install
npm run build

/bin/sh -c "(node ./dist/lobby-rollup.cjs &) && (sleep 10 ; node ./dist/server-rollup.cjs --self http://localhost:3000 --tracker http://localhost:3001 &) && . /app/test/bin/activate && python run_simulator.sh"


